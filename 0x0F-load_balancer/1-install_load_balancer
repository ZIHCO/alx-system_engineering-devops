#!/usr/bin/env bash
# install and configure HAproxy on this server
# distribute requests using a roundrobin algorithm

apt update
apt-get install --no-install-recommends software-properties-common -y
add-apt-repository ppa:vbernat/haproxy-2.6 -y
apt-get install haproxy=2.6.\* -y
# frontend config
freplacement="frontend http\n\tbind *:80\n\tmode http\n\tdefault_backend web-backend\n"
sed -i "$ a$freplacement" /etc/haproxy/haproxy.cfg
# backend config
replacement="backend web-backend\n\tmode http\n\tbalance roundrobin\n\tserver web1 52.91.134.149:80\n\tserver web2 54.90.62.231:80"
sed -i "$ a$replacement" /etc/haproxy/haproxy.cfg
service haproxy restart
